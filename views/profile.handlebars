<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4 new-post-row">

  <div class="col-md-6 new-post-col">
    <h3>Create a New post:</h3>
  <form class="new-post-form">
    <div class="form-group">
      <label for="post-name">Post name:</label>
      <input class="form-control" id="post-name" type="text" placeholder="Title">
    </div>
    <div class="form-group">
      <label for="post-content">What do you want to say?</label>
      <textarea class="form-control" id="post-desc" rows="3"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn submit submit-post-btn">Post</button>
    </div>
    </form>
  </div>


  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{posts.id}}">{{post.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn delete btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>